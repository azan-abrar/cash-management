<div class="d-flex h-100 align-items-center justify-content-center">
  <div class="container">
    <div class="col-sm-4 mx-auto">
      <div class="p-3 border rounded">
        <h2 class="border-bottom pb-3">Sign up</h2>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field form-group mb-3">
            <% User.roles.each do |k, v| %>
              <%= f.radio_button :role, k, required: true %>
              <%= k.humanize %>
            <% end %>
          </div>

          <div class="field form-group mb-3">
            <%= f.label :name, class: 'mb-2 d-block' %>
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>

          <div class="field form-group mb-3">
            <%= f.label :surname, class: 'mb-2 d-block' %>
            <%= f.text_field :surname, class: 'form-control', required: true %>
          </div>

          <div class="field form-group mb-3">
            <%= f.label :email, class: 'mb-2 d-block' %>
            <%= f.email_field :email, autocomplete: 'email', class: 'form-control', required: true %>
          </div>

          <div class="field form-group mb-3">
            <%= f.label :password, class: 'mb-2 d-block' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', required: true %>
          </div>

          <div class="field form-group mb-3">
            <%= f.label :password_confirmation, class: 'mb-2 d-block' %>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', required: true %>
          </div>

          <div class="field form-group mb-3">
            <%= f.label :avatar, class: 'mb-2 d-block' %>
            <%= f.file_field :avatar, required: true %>
          </div>

          <div class="actions mb-3">
            <%= f.submit 'Sign up', class: 'btn btn-primary' %>
          </div>
        <% end %>
        <div class="text-center">
          <%= render 'users/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>
